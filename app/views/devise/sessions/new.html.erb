  <div class="page-view h-75 d-flex align-items-center">
    <div class="card p-5 m-auto bg-dark show-view">
      <div class="card-header">
        <h2 class="text-warning text-center">Sign In To Your Account</h2>
      </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="card-body">

      <div class="field form-group p-3">
        <%= f.label :email, class:'text-warning mb-2' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
      </div>

      <div class="field form-group p-3">
        <%= f.label :password, class:'text-warning mb-2'%><br />
        <%= f.password_field :password, autocomplete: "current-password", class:'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field form-check">
          <%= f.check_box :remember_me, class:'form-check-input' %>
          <%= f.label :remember_me, class:'form-check-label' %>
        </div>
      <% end %>

      <div class="actions p-3">
        <%= f.submit "Log in", class: 'btn btn-warning' %>
      </div>
    <% end %>
    </div> 
    <div class='text-light text-center'>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>