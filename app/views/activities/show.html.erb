<div class="page-view h-75 d-flex align-items-center">
  <div class="card text-center w-25 m-auto bg-dark show-view">
    <div class="card-header">
      <h3 class="text-warning"><%= @activity.name %></h3>
    </div>
    <div class="card-body">
      <h5 class="card-title">For <%= @activity.duration %> Minutes On <%= @activity.acivity_date.strftime("%B %d, %Y") %> </h5>
      
      <a href="#" class="btn btn-outline-warning m-5">Go to All Activities</a>
    </div>
    <div class="card-footer text-muted">
      <hr>
      <%= link_to 'Edit This Activty', edit_activity_path(@activity), class:'text-light text-decoration-none' %>
    </div>
  </div>
</div>